#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "ru");
    cout << "\n Зад 1" << endl;
    int x;
    cout << "Введите размер файла в байтах:";
    cin >> x;
    int y;
    if (x % 1024 == 0)
    {
        y = x / 1024;
    }
    else
    {
        y = x / 1024 + 1;
    }
    cout << "Количество полных килобайтов, которые занимает данный файл: " << y << endl;


    cout << "\n Зад 2" << endl;
    int A, B, C;
    cout << "Введите значение А=";
    cin >> A;
    cout << "Введите ненулевое значение В (B<A)=";
    cin >> B;
    if (B < A) {
    C = A / B;
    cout << "Количество отрезков B, которое можно разместить на отрезке А:" << C << endl;
    }
    else
    cout << "A>B" << endl;
        
        
    cout << "\n Зад 3" << endl;
    int D;
    cout << "Введите значение А=";
    cin >> A;
    cout << "Введите ненулевое значение В (B<A)=";
    cin >> B;
    if (B < A) {
    C = A / B;
    D= A - C*B;
    cout << "Длина незанятой части:" << D << endl;
    }
    else
    cout << "A>B" << endl; 
    
    cout << "\n Зад 4" << endl;
    int a, b, c;
    cout << "Введите двухзачное число: ";
    cin >> a;
    b = a / 10;
    c = a % 10;
    if (a > 0) {
    cout << "Число, полученное при перестановке цифр исходного числа: " << c<<b << endl;
    }
    else
    cout << "Число, полученное при перестановке цифр исходного числа: " << c<<abs(b) << endl;
    
        
    cout << "\n Зад 5" << endl;
    int d;
    cout << "Введите трехзначное число: ";
    cin >> a;
    b = a / 100;
    c = a % 100;
    if (a > 0) {
    cout << "Число, полученное при перестановке цифр исходного числа: " << c<<b << endl;
    }
    else
    cout << "Число, полученное при перестановке цифр исходного числа: " << c<<abs(b) << endl;   
 return 0;
}
