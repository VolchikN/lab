#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "ru");
   cout << "\n Зад 1" << endl;
    float s, n;
   cout << "Введите стоимость 1 кг конфет: ";
   cin >> s;
   cout << "Стоимость конфет: " << endl;
   for  (n = 0.1; n < 1.1;  n += 0.1)
        cout << n << " кг = " <<  s*n << endl; 
        
    
   
    cout << "\n Зад 2" << endl;
    float k=1, a=1.1;
    int N, i;
   cout << "Введите целое число N: ";
   cin >> N;
  for (i = 1; i<=N; ++i) {
    k *= a;
    a += 0.1;
  }
  cout << "Произведение чисел = " << k<< endl; 
 
    
    
   cout << "\n Зад 3" << endl;
    int b=0;
   cout << "Введите целое число N: ";
   cin >> N;
   for  (i =1; i<=(2*N-1); i+=2){
     b += i;
    cout<< "Результат = "<< b<< endl;
  } 
   
   
   cout << "\n Зад 4" << endl;
    float A, A2=1, l=1;
    cout<<"Введите число A: ";
    cin>>A;
    cout<<"Введите целую степень N: ";
    cin>>N;
    for (i = 1; i <= N; ++i)
    {
        A2 *= A;
        l += A2;
    }
    cout<<"Результат = "<< l<< endl;


     cout << "\n Зад 5" << endl;
    int n1;
    float a1, a2 = 1, L = 1;
    cout<<"Введите число A: ";
    cin>>a1;
    cout<<"Введите целую степень N: ";
    cin>>n1;
    for (i = 1; i <= n1; ++i)
    {
        a2 *= -a1;
        L += a2;
    }
   cout<<"Результат = "<< L<< endl;
    return 0;
}
